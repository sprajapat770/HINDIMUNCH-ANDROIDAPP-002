<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:paddingLeft="@dimen/dp_10"
    android:background="@color/color_00D3D7"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_30">

    <ImageView
        android:id="@+id/imgNav"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@drawable/ic_menu_24"
        android:tint="@color/color_FF000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_50"
        android:gravity="left"
        android:text="@string/hindi_munch"
        android:textColor="@color/color_FF000000"
        android:textSize="@dimen/sp_20" />

    <ImageView
        android:id="@+id/imgCustomLang"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:tint="@color/color_FF000000"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/dp_90"
        android:src="@drawable/ic_translate_24" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/crlCstoolProfile"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/dp_45"
        android:src="@drawable/img_profile" />

    <ImageView
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:tint="@color/color_FF000000"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/ic_notifications_none_24" />


</FrameLayout>